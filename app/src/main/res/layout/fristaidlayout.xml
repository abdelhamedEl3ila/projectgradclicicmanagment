<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/customedittext"
        android:layout_marginTop="@dimen/_7sdp"
        android:id="@+id/fristaid"
        android:elevation="@dimen/_5sdp"
        android:layout_gravity="center"

        >

        <FrameLayout
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/wrap_content"

            >

            <ImageView
                android:id="@+id/frisaidicon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@mipmap/artifical_foreground" />

            <TextView
                android:id="@+id/textfristaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Artificial Respiration"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>