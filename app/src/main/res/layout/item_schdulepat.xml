<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_130sdp"
        android:background="@drawable/customedittext"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043">


                <ImageView
                    android:id="@+id/imagedoc"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/namedoctxxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr.Ahmed Mohamed"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                   android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_60sdp"
                    />

                <TextView
                    android:id="@+id/specialtiestxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_dentisticon"
                    android:text="Dentist"
                    android:textColor="@color/secondcolor"
                    android:textSize="@dimen/_11ssp"
                    android:drawablePadding="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_60sdp"
                   />

            <TextView
                android:id="@+id/txttimeclinic"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="#C9E8FD"
                android:text="In 23 March 2022 4:00 pm"
                android:textSize="@dimen/_12ssp"
                android:textAlignment="center"
                android:textColor="@color/secondcolor"
                android:layout_gravity="center"

                 />

            <Button
                android:id="@+id/cancelclinic"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="#FAC7C7"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#E91E63"

               />

        <Button
            android:id="@+id/callclinic"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/secondcolor"
            android:text="Call Clinic"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_marginStart="@dimen/_160sdp"
             />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>