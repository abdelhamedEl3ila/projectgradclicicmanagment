<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/profilepatient"
    tools:context=".patient.ProfilePatientActivity">
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@color/secondcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/backbtnprofile"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/secondcolor"
        android:src="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Profile"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="User Name"
            android:textColor="@color/gray"
            android:textSize="@dimen/_13ssp" />

        <EditText
            android:id="@+id/fulluser"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15ssp"
            android:background="@drawable/customedittext"
            android:drawableStart="@drawable/ic_baseline_person_24"
android:enabled="false"
            android:elevation="10dp"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:text="PhoneNumber"
            android:textColor="@color/gray"
            android:textSize="@dimen/_13ssp" />

        <EditText
            android:id="@+id/mobileedit"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15ssp"
            android:background="@drawable/customedittext"
            android:enabled="false"
            android:drawableStart="@drawable/phone_icon"
            android:inputType="phone"
            android:elevation="10dp"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:text="Email"
            android:textColor="@color/gray"
            android:textSize="@dimen/_13ssp" />

        <EditText
            android:id="@+id/emailedit"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15ssp"
            android:background="@drawable/customedittext"
            android:elevation="10dp"
            android:enabled="false"
            android:drawableStart="@drawable/ic_baseline_email_24"

            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:text="Password"
            android:textColor="@color/gray"
            android:textSize="@dimen/_13ssp" />

        <EditText
            android:id="@+id/passwordedit"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15ssp"
            android:background="@drawable/customedittext"
            android:elevation="10dp"
            android:enabled="false"
            android:drawableStart="@drawable/ic_baseline_lock_24"

            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/editprofile"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/customedittext"

            android:elevation="10dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/secondcolor"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/saveediyprofile"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/custombutton"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>