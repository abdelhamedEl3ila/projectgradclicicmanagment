<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clinicmangmentsystem">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClinicMangmentSystem">
        <activity
            android:name=".doctor.DetailsActivity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden"
            ></activity>
        <activity
            android:name=".doctor.DoctorActivity"
            android:exported="false" />
        <activity
            android:name=".patient.SignuppatientActivity"
            android:exported="true" />
        <activity
            android:name=".patient.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".doctor.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SelectActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".doctor.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".patient.MainActivity"
            android:exported="true" />
    </application>

</manifest>